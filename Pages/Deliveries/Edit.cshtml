@page
@model TruckManagement.Pages.Deliveries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Delivery.ID" />
            <div class="form-group">
                <label asp-for="Delivery.StartLocation" class="control-label"></label>
                <input asp-for="Delivery.StartLocation" class="form-control" />
                <span asp-validation-for="Delivery.StartLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.EndLocation" class="control-label"></label>
                <input asp-for="Delivery.EndLocation" class="form-control" />
                <span asp-validation-for="Delivery.EndLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.PhoneNumber" class="control-label"></label>
                <input asp-for="Delivery.PhoneNumber" class="form-control" />
                <span asp-validation-for="Delivery.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.StatusID" class="control-label">Status Name</label>
                <select asp-for="Delivery.StatusID" class="form-control" asp-items="ViewBag.StatusID">
                </select>
                <span asp-validation-for="Delivery.StatusID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
